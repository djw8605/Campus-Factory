#!/bin/sh
#
# Really simple script to start/stop/restart the factory
#


if [ "$#" -eq 1 ]; then
    if [ $1 == "start" ]; then
        condor_submit share/factory.job
    elif [ $1 == "stop" ]; then
        condor_rm -const 'IsFactory =?= true'
    elif [ $1 == "restart" ]; then
        condor_hold -const 'IsFactory =?= true'
        condor_resume -const 'IsFactory =?= true'
    fi
else
    echo "usage [start|stop|restart]"
fi

